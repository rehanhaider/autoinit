---
import Layout from "@/layouts/Layout.astro";
import GoToTop from "@/components/GoToTop.astro";

import * as config from "@root/config.json";

const { brandName = config.BRAND_NAME } = Astro.props;
const { frontmatter } = Astro.props;
---

<!doctype html>
<Layout title={`${brandName} | ${frontmatter.title}`}>
    <div class="flex flex-col mx-auto lg:flex-row flex-1 overflow-hidden justify-center">
        <content id="content" class="flex w-full lg:w-8/12 overflow-y-auto p-4 my-4">
            <article class="w-full p-2">
                <div class="prose p-2">
                    <slot />
                </div>
            </article>
        </content>
    </div>

    <GoToTop />
</Layout>

<style>
    .prose {
        max-width: 100%;
        h1 {
            margin: 1rem 0;
            font-size: 1.5rem;
            font-weight: bold;
        }
        h2 {
            padding: 1rem 0;
            border-bottom: 2px solid #333;
        }
        p {
            margin: 1rem 0;
        }
        pre {
            margin: 1rem 0;
        }
        code {
            display: inline-block;
            padding: 0.5rem;
        }
    }

    #go-to-top {
        z-index: 1000;
    }
</style>
