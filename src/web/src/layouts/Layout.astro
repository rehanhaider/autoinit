---
import "../styles/global.css";
import * as config from "@root/config.json";

const { projectName = config.PROJECT_NAME } = Astro.props;
const { title = projectName } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-100" lang="en" data-theme="business">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={`Admin Panel for ${projectName}`} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>

    <body class="flex flex-col min-h-screen">
        <slot />
    </body>
</html>
