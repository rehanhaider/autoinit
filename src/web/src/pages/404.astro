---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import fourOFour from "@/assets/images/404.jpg";
---

<Layout title="404 | Did you take a wrong turn?">
    <div class="container mx-auto p-4 flex flex-col gap-8">
        <h1 class="text-4xl font-bold">Oops! Page Not Found</h1>
        <p class="text-lg">Head back to the <a href="/" class="text-primary">Home</a></p>
        <Image src={fourOFour} alt="404" />
    </div>
</Layout>
